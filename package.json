{
  "name": "vue-promise-dialogs",
  "version": "1.3.1",
  "author": "Kirill Romanov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Djaler/vue-promise-dialogs"
  },
  "keywords": [
    "vue",
    "promise",
    "dialogs",
    "async"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "stryker": "stryker run",
    "build:typings": "ttsc -p tsconfig.build.json && copyfiles -u 1 \"src/**/*.d.ts\" dist/types",
    "build": "vite build && npm run build:typings",
    "check-es6": "es-check es6 dist/vue-promise-dialogs.umd.js",
    "check-treeshake": "agadoo dist/vue-promise-dialogs.es.js",
    "postbuild": "npm run check-es6 && npm run check-treeshake",
    "prerelease": "npm run lint && npm run test && npm run build",
    "release": "standard-version --preset @djaler/standard",
    "release:github": "conventional-github-releaser --preset @djaler/standard",
    "publish": "clean-publish"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/vue-promise-dialogs.umd.js",
  "module": "./dist/vue-promise-dialogs.es.js",
  "exports": "./dist/vue-promise-dialogs.es.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "packageManager": "pnpm@7.1.6",
  "peerDependencies": {
    "vue": "^2.6.4 || ^3.0.0"
  },
  "devDependencies": {
    "@djaler/conventional-changelog-standard": "1.2.0",
    "@djaler/eslint-config-typescript": "0.0.7",
    "@jest/types": "28.1.0",
    "@rollup/plugin-replace": "4.0.0",
    "@stryker-mutator/api": "6.0.2",
    "@stryker-mutator/core": "6.0.2",
    "@stryker-mutator/jest-runner": "6.0.2",
    "@types/jest": "26.0.20",
    "@vue/test-utils": "2.0.0",
    "@zerollup/ts-transform-paths": "1.7.18",
    "agadoo": "2.0.0",
    "clean-publish": "4.0.0",
    "conventional-github-releaser": "3.1.5",
    "copyfiles": "2.4.1",
    "es-check": "6.2.1",
    "eslint": "8.16.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "jest": "28.1.0",
    "nano-staged": "0.6.0",
    "simple-git-hooks": "2.7.0",
    "standard-version": "9.3.2",
    "ts-jest": "26.5.6",
    "ttypescript": "1.5.12",
    "typescript": "4.4.2",
    "vite": "2.8.6",
    "vue": "3.2.36",
    "vue-class-component": "7.2.6",
    "vue-property-decorator": "9.1.2",
    "vue-template-compiler": "2.6.12"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/simple-git-hooks && ./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "*.{js,ts}": "eslint --fix"
  }
}
