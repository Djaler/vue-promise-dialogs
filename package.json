{
  "name": "vue-promise-dialogs",
  "version": "1.3.3",
  "author": "Kirill Romanov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Djaler/vue-promise-dialogs"
  },
  "keywords": [
    "vue",
    "promise",
    "dialogs",
    "async"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "build:typings": "tsc -p tsconfig.build.json",
    "build": "vite build && npm run build:typings",
    "check-es6": "es-check es6 dist/index.js",
    "check-treeshake": "agadoo dist/index.mjs",
    "postbuild": "npm run check-es6 && npm run check-treeshake",
    "prerelease": "npm run lint && npm run test && npm run build",
    "release": "commit-and-tag-version --preset @djaler/standard",
    "release:github": "conventional-github-releaser --preset @djaler/standard",
    "publish": "clean-publish"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "packageManager": "pnpm@6.27.1",
  "peerDependencies": {
    "vue": "^2.6.4"
  },
  "devDependencies": {
    "@djaler/conventional-changelog-standard": "1.2.0",
    "@djaler/eslint-config-typescript": "0.0.7",
    "@rollup/plugin-replace": "2.3.4",
    "@vue/test-utils": "1.3.0",
    "agadoo": "2.0.0",
    "clean-publish": "4.0.0",
    "commit-and-tag-version": "10.0.1",
    "conventional-github-releaser": "3.1.5",
    "es-check": "5.2.4",
    "eslint": "7.32.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "jsdom": "20.0.0",
    "nano-staged": "0.6.0",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.4.2",
    "vite": "2.9.12",
    "vitest": "0.15.2",
    "vue": "2.6.12",
    "vue-template-compiler": "2.6.12"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/simple-git-hooks && ./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "*.{js,ts}": "eslint --fix"
  }
}
